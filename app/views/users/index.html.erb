<h1>All Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Admin?</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first %> <%= user.last %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= if user.admin then "Admin" else link_to 'Make Admin', user, data: { params: { user: { admin: true} }.to_param }, :method => 'PUT', remote: true end%></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
