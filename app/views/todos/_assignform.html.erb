<%= form_for @todo, :url => {:action => "assigner"}, :html => {:class => "form-horizontal"}, remote: true do |f|   %>
<div class="form-group">
		<%= f.label :task, "Task:" %>
  	<%= f.text_field :task, class: "form-control" %>
  </div>
	<div class="form-group">
		<%= f.label :due, "Due date:" %>
  	<%= f.date_select :due, :order => [:month, :day, :year], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, "User:" %>
    <%= f.select :user_id, options_for_select(@users) %>
  </div>
  
	<div class="form-group">
  	<%= f.submit "Submit", class: "btn btn-primary " %>
  </div>
<% end %>