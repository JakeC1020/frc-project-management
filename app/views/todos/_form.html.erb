<%= form_for @todo, :html => {:class => "form-horizontal"}, remote: true do |f|   %>


<div class="form-group">
		<%= f.label :task, "Task:" %>
  	<%= f.text_field :task, class: "form-control" %>
  </div>
	<div class="form-group">
		<%= f.label :due, "Due date:" %>
  	<%= f.text_field :due, class: "form-control", id: "datepicker" %>
  </div>
  
	<div class="form-group">
  	<%= f.submit "Submit", class: "btn btn-primary " %>
  </div>
<% end %>